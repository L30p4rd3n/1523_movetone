{
    "description": "scrapes pics and text from specified websites",
    "manifest_version": 2,
    "name": "xplt's sh*tf*ckery",
    "version": "0.0.1",
    "author": "L30p4rd3n",
  
    "permissions": ["webRequest", "<all_urls>", "webRequestBlocking", "management"],

    
    "background": {
      "page": "background.html"
    },

    "content_scripts":
    [{ 
      "matches": ["<all_urls>"],
      "js": ["loader.js"]
    }],

    "web_accessible_resources": 
      [
        "content.js",
         "loader.js"
      ]
    

  }
  